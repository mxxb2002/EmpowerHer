<body class="bg-pink-50 text-gray-800">
    <header class="bg-pink-500 text-white p-6">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-bold">About Us - Women's Safety Network</h1>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="/home" class="hover:text-pink-200">Home</a></li>
                    <li><a href="/aboutus" class="hover:text-pink-200">About Us</a></li>
                    <li><a href="/login" class="hover:text-pink-200">Login</a></li>
                    <li><a href="/contact" class="hover:text-pink-200">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>
